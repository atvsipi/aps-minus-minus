{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "es2022",
        "target": "ESNext",
        "strict": false,
        "jsx": "react",
        "allowJs": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "noEmit": false,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
